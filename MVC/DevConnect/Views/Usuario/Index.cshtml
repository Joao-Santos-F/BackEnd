@model DevConnect.Models.TbUsuario

@{
    ViewData["Title"] = "Logo DevConnect";
}

<link rel="stylesheet" href="~/css/Cadastro.css" />

<script defer >
    let UsuarioNovoCadastrado = "@ViewBag.UsuarioNovoCadastrado";

    if (UsuarioNovoCadastrado == "Nao cadastrado") {
        alert("Não foi possivel cadastrar o usuario, fale com um de nossos administradores...");
    }
</script>

<h1>Tela cadastro - DevConnect</h1>

<main>
    <div>
        <!--Formulario-->
        <form class="estilo-form-cadastro" asp-action="Index" asp-asp-controller="Usuario" enctype="multipart/form-data">
            <img src="~/images/logo-devconnect-lg.svg" alt="LogoDevConnect" />

            <p>Cadastrar-se para comunidade exclusiva de desenvolvedores(as).</p>

            <div class="formulario-campos">
                <label for="Nome">Nome e sobrenome</label>
                <input type="text" asp-for="NomeCompleto" id="Nome" placeholder="Nome e sobrenome" required />
            </div>

            <div class="formulario-campos">
                <label for="Nome-user">Nome de usuário</label>
                <input type="text" asp-for="NomeUsuario" id="Nome-user" placeholder="Nome de usuário" required />
            </div>

            <div class="formulario-campos">
                <label for="E-mail">E-mail</label>
                <input type="email" asp-for="Email" id="E-mail" placeholder="E-mail" required>
            </div>

            <div class="formulario-campos">
                <label for="Senha">Senha</label>
                <input type="password" asp-for="Senha" id="Senha" placeholder="Senha" required />
            </div>

            <div class="formulario-campos">
                <label id="label-file" for="campo-uploud">Faça seu uploud aqui...</label>
                <input type="file" name="Imagem" id="campo-uploud">
            </div>

            <button type="submit" class="formulario-botao-azul">Cadastrar-se</button>

            <p>Ao se cadastrar, você concorda com nossos <a href="#">Termos</a>, <a href="">Políticas de Dados</a> e <a
                    href="">Política de cookies.</a></p>
        </form>

        <section id="secao-de-cadastro" class="estilo-formulario">
            <p>Tem uma conta?<a href="~/Home/Index">Conectar-se</a></p>
        </section>
    </div>
</main>